{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:vue/essential",
    "@vue/standard"
  ],
  "env": {
    "browser": true,
    "node": false,
    "commonjs": true,
    "es6": true
  },
  "globals": {
    "process": true
  },
  "rules": {
    "no-console": 0,
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      {"anonymous": "always", "named": "never"}
    ],
    "max-len": [
      "error",
      120
    ]
  }
}